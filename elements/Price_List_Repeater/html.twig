{% set field = content.acf_field|default('price_list') %}
{% set items = attribute(acf, field) %}

{% if items %}
  {% for item in items %}
    <div class="bde-price-list__row {% if loop.index is even %}bde-price-list__row-alt{% endif %}">
      <div class="bde-price-list__item">
        <div class="bde-price-list__item-name">{{ item.item_name }}</div>
        {% if item.item_description %}
          <div class="bde-price-list__item-description">{{ item.item_description }}</div>
        {% endif %}
      </div>
      <div class="bde-price-list__price-group">
        <div class="bde-price-list__price">
          {% set order = item.currency_order|default('before') %}
          {% if order == 'before' %}
            <span class="bde-price-list__currency">{{ item.currency_symbol }}</span>
            <span class="bde-price-list__amount">{{ item.item_price }}{% if item.add_ %},-{% endif %}</span>
          {% else %}
            <span class="bde-price-list__amount">{{ item.item_price }}{% if item.add_ %},-{% endif %}</span>
            <span class="bde-price-list__currency bde-price-list__currency--after">{{ item.currency_symbol }}</span>
          {% endif %}
        </div>
        {% if item.unit %}
          <div class="bde-price-list__unit-line">{{ item.unit }}</div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
{% endif %}
